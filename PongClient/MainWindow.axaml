<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PongClient.MainWindow"
        Width="1280"
        Height="720"
        Title="PongClient"
        CanResize="False"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Canvas Name="GameCanvas" Background="Black"/>
        <StackPanel Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Player1Score"
                           Text="0"
                           FontSize="50"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"/>

                <TextBlock x:Name="Player2Score"
                           Grid.Column="1"
                           Text="0"
                           FontSize="50"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"/>
            </Grid>
            <TextBlock x:Name="Player1Status" Margin="510 15 0 0" Text="Player 1: Waiting..." FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="Player2Status" Margin="510 25 0 0" Text="Player 2: Waiting..." FontSize="20" FontWeight="Bold"/>
        </StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height= "Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="TimerTitle"
                           Grid.Row="1"
                           Text="" 
                           FontSize="50" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="StartTimer"
                           Grid.Row="2"
                           Text="" 
                           FontSize="50" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
    </Grid>
</Window>